{
    "name": "vscode-k9",
    "displayName": "shakti",
    "description": "shakti(k9) language support for vscode",
    "author": {
        "name": "Jo Shinonome",
        "email": "jshinonome@gmail.com"
    },
    "version": "0.1.2",
    "homepage": "https://github.com/jshinonome/vscode-k9",
    "publisher": "jshinonome",
    "engines": {
        "vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jshinonome/vscode-k9.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "icon.png",
    "main": "./dist/client.js",
    "activationEvents": [
        "onLanguage:k"
    ],
    "contributes": {
        "languages": [
            {
                "id": "k",
                "aliases": [
                    "k9",
                    "k",
                    "shakti"
                ],
                "extensions": [
                    ".k"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "k",
                "scopeName": "source.k",
                "path": "./syntaxes/k.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "k9-client.terminal.sendCurrentLine",
                "title": "Send Current Line to Terminal",
                "category": "shakti-k9"
            },
            {
                "command": "k9-client.terminal.sendSelection",
                "title": "Send Current Selection to Terminal",
                "category": "shakti-k9"
            },
            {
                "command": "k9-client.terminal.run",
                "title": "Run q File in Terminal",
                "category": "kdb+/q ext",
                "icon": {
                    "light": "assets/svg/light/debug-start.svg",
                    "dark": "assets/svg/dark/debug-start.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "k9-client.terminal.run",
                    "when": "resourceLangId == k",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "k9-client.terminal.sendCurrentLine",
                "key": "ctrl+shift+enter"
            },
            {
                "command": "k9-client.terminal.sendSelection",
                "key": "ctrl+shift+e"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "k9 Extension Configuration",
            "properties": {
                "k9-server.sourceFiles.globsPattern": {
                    "scope": "resource",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/src/**/*.k"
                    ],
                    "description": "Pattern to be included"
                },
                "k9-server.sourceFiles.ignorePattern": {
                    "scope": "resource",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/build",
                        "**/node_modules"
                    ],
                    "description": "Pattern to be excluded"
                },
                "k9-client.terminal.kBinary": {
                    "scope": "resource",
                    "type": "string",
                    "default": "k",
                    "description": "k Binary Path"
                },
                "k9-client.terminal.envPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "Environment File Path(Shell Script)"
                }
            }
        }
    },
    "scripts": {
        "clean": "rm -rf dist",
        "vscode:package": "vsce package",
        "vscode:publish": "vsce publish",
        "compile": "tsc -p ./",
        "watch": "tsc --watch -p ./",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "dependencies": {
        "@types/graceful-fs": "^4.1.5",
        "@types/klaw": "^3.0.2",
        "@types/picomatch": "^2.2.6",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "path": "^0.12.7",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1",
        "vscode-uri": "^3.0.2",
        "web-tree-sitter": "^0.19.4",
        "csv-parser": "^3.0.0",
        "eslint": "^7.32.0",
        "fuse.js": "^6.4.6",
        "graceful-fs": "^4.2.8",
        "klaw": "^3.0.0",
        "picomatch": "^2.3.0",
        "moment": "^2.29.1"
    },
    "devDependencies": {
        "@types/node": "^16.9.1",
        "@types/vscode": "^1.60.0",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.3",
        "vscode-test": "^1.6.1",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}